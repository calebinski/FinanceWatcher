<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graph goes here."
                android:padding="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List goes here."
                android:id="@+id/category_list"
                android:padding="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/daily_finances_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/monthly_finances_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/yearly_finances_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/purchase_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of purchases go here."
            android:padding="24dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/allowances_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Allowances"/>


    </LinearLayout>
</LinearLayout>